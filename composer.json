{
  "name": "ssnepenthe/color-utils",
  "description": "A PHP library for performing SASS-like color manipulations.",
  "type": "library",
  "keywords": [
    "alpha",
    "blue",
    "brightness",
    "color",
    "convert",
    "conversion",
    "green",
    "hex",
    "hexadecimal",
    "hsl",
    "hsla",
    "hue",
    "lightness",
    "luminance",
    "red",
    "rgb",
    "rgba",
    "sass",
    "saturation",
    "scss",
    "manipulation",
    "transformation"
  ],
  "homepage": "https://github.com/ssnepenthe/color-utils",
  "license": "GPL-2.0-or-later",
  "require": {
    "php": "^7.0 || ^8.0"
  },
  "require-dev": {
    "psy/psysh": "^0.10 || ^0.11",
    "phpunit/phpunit": "^6.0 || ^7.0 || ^8.5.14 || ^9.0",
    "vimeo/psalm": "^3.0 || ^4.0",
    "yoast/phpunit-polyfills": "^1.0"
  },
  "autoload": {
    "files": [
      "inc/colors.php",
      "inc/helpers.php",
      "inc/transformations.php"
    ],
    "psr-4": { "SSNepenthe\\ColorUtils\\": "src/" }
  },
  "scripts": {
    "phpunit": "./vendor/bin/phpunit --colors=always",
    "psalm": "./vendor/bin/psalm"
  }
}
